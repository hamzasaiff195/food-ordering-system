# ========================
# DATABASE CONFIGURATION
# ========================
DB_HOST=localhost       # Database host (e.g., localhost or IP)
DB_PORT=5432            # Database port (default 5432 for PostgreSQL)
DB_USER=your_db_user    # Database username
DB_PASS=your_db_pass    # Database password
DB_NAME=your_db_name    # Database name
DB_SYNC=false           # Set to true for auto schema sync (dev only)

# ========================
# AUTHENTICATION
# ========================
JWT_SECRET=your_jwt_secret      # Secret key for JWT
JWT_EXPIRES_IN=3600s             # JWT expiration time (e.g., 3600s, 1h)

# ========================
# EMAIL CONFIGURATION
# ========================
EMAIL_HOST=smtp.example.com     # SMTP host
EMAIL_PORT=587                  # SMTP port (587 for TLS)
EMAIL_USER=your_email@example.com # Email username
EMAIL_PASS=your_email_password   # Email password

# ========================
# REDIS CONFIGURATION
# ========================
REDIS_HOST=localhost           # Redis server host
REDIS_PORT=6379                # Redis server port
REDIS_CART_TTL=3600            # Cart time-to-live in seconds
